{% set category = categories[category] %}
{% set author = authors[author_id] %}
<article class="post-item">
  <a href="" class="blog-category"># {{ category.display_name}}</a>
  <a href="{{ metadata.baseurl }}{{ url}}">
    <div class="post-info">
      <div class="post-time-info">
        <time class="post-meta" datetime="{{ date }}">
          {{ date | date: "%b %-d, %Y" }}
        </time>
      </div>
      <h1 class="post-title">
        {{ title }}
      </h1>
      <p class="paragraph">
        {{ content | truncatewords:40 | strip_html}}
      </p>
    </div>
  </a>
  <span class="author">By <a href="{{author.profile_url}}" class="author" target="_blank" >{{ author.display_name }}</a></span>
</article>
